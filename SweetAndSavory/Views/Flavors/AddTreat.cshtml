@{
  Layout = "_Layout";
}

@model SweetAndSavory.Models.Flavor

<h2>Add a treat to @Html.DisplayFor(model => model.Name)</h2>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.FlavorId)

  @Html.Label("Select Treat")
  @Html.DropDownList("TreatId", "-select-")

  <input type="submit" value="Save" class="btn btn-outline-primary" />
}

<p>@Html.ActionLink("View All Favors", "Index")</p>
