@{
  Layout = "_Layout";
}

@model SweetAndSavory.Models.Flavor

<h4><span class="underLine">Add A New Flavor</span></h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new {@class="form-control", required = "required"})
  <input type="submit" value="Add New Flavor" class="btn btn-outline-success" />
}
<div class="flex">
  @Html.ActionLink("Show All Flavors", "Index", "Flavors", null, new {@class = "btn btn-outline-dark"})
  @Html.ActionLink("Home", "Index", "Home", null, new {@class = "btn btn-outline-dark"})
</div>