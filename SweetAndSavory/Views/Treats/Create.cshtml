@{
  Layout = "_Layout";
}

@model SweetAndSavory.Models.Treat

<h4><span class="underLine">Add A New Treat</span></h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new {required = "required"})

  @Html.Label("Select flavor")
  @Html.DropDownList("CategoryId", "-select-")

  <input type="submit" value="Add New Treat" class="btn btn-outline-success" />
}
<p>@Html.ActionLink("Show all items", "Index")</p>