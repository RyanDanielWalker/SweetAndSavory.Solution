@{
  Layout = "_Layout";
}

@model SweetAndSavory.Models.Treat

<h4><span class="underLine">Add A New Treat</span></h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new {@class="form-control", required = "required"})

  @Html.Label("Select Flavor")
  @Html.DropDownList("FlavorId", "-select-")

  <input type="submit" value="Add New Treat" class="btn btn-outline-success" />
}
<div class="flex">
  @Html.ActionLink("Show All Treats", "Index", "Treats", null, new {@class = "btn btn-outline-dark"})
  @Html.ActionLink("Home", "Index", "Home", null, new {@class = "btn btn-outline-dark"})
</div>