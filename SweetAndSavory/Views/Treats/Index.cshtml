@{
  Layout = "_Layout";
}

@using SweetAndSavory.Models;
@model List<SweetAndSavory.Models.Treat>;

<h1>Treats</h1>

@if (@Model.Count == 0)
{
  <h3>No Treats have been added yet!</h3>
}

<ul>
  @foreach (Treat treat in Model)
  {
    <li>@Html.ActionLink($"{treat.Name}", "Details", new { id = treat.TreatId })</li>
  }
</ul>

<div class="flex">
  @Html.ActionLink("Home", "Index", "Home", null, new { @class = "btn btn-outline-dark"})
  @Html.ActionLink("Add New Treat", "Create", "Treats", null, new {@class = "btn btn-outline-dark"})
</div>