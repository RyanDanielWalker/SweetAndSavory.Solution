@{
  Layout = "_Layout";
}

@using SweetAndSavory.ViewModels

@model LoginViewModel

<h2>Log In With Your Account</h2>
<hr />
@using (Html.BeginForm())
{
  @Html.LabelFor(m => m.Email)
  @Html.TextBoxFor(m => m.Email, new {@class="form-control", required = "required"})

  @Html.LabelFor(m => m.Password)
  @Html.PasswordFor(m => m.Password, new {@class="form-control", required = "required"})

  <input type="submit" value="Log in" class="btn btn-outline-primary" style="margin-bottom: 5px;" />
}

<hr style="margin-top: 25%" />
Don't Have an Account?
@Html.ActionLink("Register Here", "Register", "Account", null, new { @class = "btn btn-outline-primary"})
<div class="flex">
  @Html.ActionLink("Home", "Index", "Home", null, new {@class = "btn btn-outline-dark", style="margin-top: 10px"})
</div>
