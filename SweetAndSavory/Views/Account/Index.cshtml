@{
  Layout = "_Layout";
}

@using System.Security.Claims

<h2>Authentication with Identity</h2>
<hr />
@if (User.Identity.IsAuthenticated)
{
  <p>Hello @User.Identity.Name!</p>
  @using (Html.BeginForm("LogOff", "Account"))
  {
    <input type="submit" class="btn btn-outline-dark" value="Log out" />
  }
}
else
{
  <div class="flex">
  @Html.ActionLink("Register", "Register", "Account", null, new {@class="btn btn-outline-dark"})
  @Html.ActionLink("Log in", "Login", "Account", null, new {@class="btn btn-outline-dark"})
  @Html.ActionLink("Home", "Index", "Home", null, new {@class="btn btn-outline-dark"})
</div>
}
